<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color4"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/Quizzify_logo"
        android:layout_width="134dp"
        android:layout_height="121dp"
        app:srcCompat="@drawable/quizzify_logo" />

    <LinearLayout
        android:layout_width="212dp"
        android:layout_height="95dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-108dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/color4"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Quizzify"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:gravity="center"
            android:padding="5sp"
            android:text="Doubt kills more dreams, than failure ever will"

            android:textColor="@color/white"
            android:textSize="8sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="search bar"
        android:textColor="@color/color2"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="359dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/global_quizzes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="380dp"
        android:layout_height="72dp"
        android:background="@color/color2"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav"></com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>